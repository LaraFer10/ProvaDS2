@model Basquete.Models.Placar

@{
    ViewData["Title"] = "Deletar";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que deseja deletar placar?</h3>
<div>
    <h4>Placar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Jogador)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Jogador.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TotalPontos)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TotalPontos)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DataPontuacao)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DataPontuacao)
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Voltar para lista de Placar</a>
    </form>
</div>
